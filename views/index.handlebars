<h1>Task Saver</h1>

<h3>Eat-Da-Burger!</h3>

<ul>
  {{#each burgers}}
  	<li>
  	   <p>ID: {{this.id}}</p>
       <p>Task: {{this.name}}</p>
       <button type="/devour">Devour it!</button>
  	</li>
  {{/each}}
</ul>

<ul>
  {{#click burgers}}
  	<li>
  	   <p>ID: {{this.id}}</p>
       <p>Task: {{this.name}}</p>
     
  	</li>
  {{/click}}
</ul>

<form action="/" method="POST">
	<textarea type="text" name="task"></textarea>

	<button type="/submit">Submit</button>
</form>
<p>Enter a burger you want to eat. Click the "Submit" button.</p>
