<h1>Eat-Da-Burger</h1>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-block devoured=true}}
    {{/unless}}
  {{/each}}
  
</ul>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-block devoured=false}}
    {{/unless}}
  {{/each}}
</ul>

<li>
	{{name}}

	<button class="change-devoured" data-id="{{id}}" data-newdevoured="{{devoured}}">
		{{#if devoured}} Devour It!</button>
</li>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="bn">Burger Name:</label>
    <input type="text" id="bn" name="burger_name">
  </div>

  <div class="form-group">
    <label for="devoured">devoured</label><br>
    <input type="radio" name="devoured" value="1" checked> Devour It!<br>
    <input type="radio" name="devoured" value="0"> Eat
  </div>

  <button type="submit">Submit</button>
</form>
